---
import { useParams } from 'react-router-dom';

const { id } = useParams();

// Sample product data based on ID (in a real-world app, this would come from an API or database)
const productDetails = {
  1: { name: 'Product 1', description: 'Detailed description of Product 1' },
  2: { name: 'Product 2', description: 'Detailed description of Product 2' },
  3: { name: 'Product 3', description: 'Detailed description of Product 3' },
};

const product = productDetails[id];

if (!product) {
  throw new Error('Product not found');
}
---

<h1>{product.name}</h1>
<p>{product.description}</p>
