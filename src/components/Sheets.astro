---
const response = await fetch(
  "https://opensheet.elk.sh/1RLlHrz6x6Bp7Bijh8A-nKRCAOWIPk-uypuq0CVle6EQ/1"
);
const data = await response.json();
---

<section>
  <h3>Chicken</h3>
  <div>
    {
      data
        .filter((dinner) => dinner.type === "Chicken")
        .map((dinner) => (
          <div>
            <div>
              <p>{dinner.name}</p>
              <div>
                <div>
                  <span>Time: {dinner.time}</span>
                  <br />
                  <span>Goes for {dinner.lasts} nights</span>
                  {dinner.instructions && (
                    <details>
                      <summary>Instructions</summary>
                      <p>{dinner.instructions}</p>
                    </details>
                  )}
                </div>
              </div>
            </div>
          </div>
        ))
    }
  </div>
</section>
